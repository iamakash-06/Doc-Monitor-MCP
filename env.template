# ====================================================================
# Doc-Monitor-MCP Environment Configuration Template
# ====================================================================
# Copy this file to .env and fill in your actual values
# 
# REQUIRED: All variables marked as REQUIRED must be set
# OPTIONAL: Variables marked as OPTIONAL have sensible defaults
#
# For setup help, run: make setup
# ====================================================================

# ====================================================================
# SERVER CONFIGURATION
# ====================================================================
# OPTIONAL: Server host binding (default: 0.0.0.0 for Docker, localhost for local)
HOST=0.0.0.0

# OPTIONAL: Server port (default: 8051)
PORT=8051

# OPTIONAL: Transport method (sse|stdio) (default: sse)
TRANSPORT=sse

# ====================================================================
# OPENAI API CONFIGURATION
# ====================================================================
# REQUIRED: OpenAI API key for embeddings and analysis
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OPTIONAL: OpenAI model for contextual analysis (default: gpt-4o-mini)
MODEL_CHOICE=gpt-4o-mini

# ====================================================================
# SUPABASE DATABASE CONFIGURATION  
# ====================================================================
# REQUIRED: Supabase project URL
# Get from: Supabase Dashboard → Settings → API → Project URL
SUPABASE_URL=your_supabase_project_url_here

# REQUIRED: Supabase service role key (NOT anon key!)
# Get from: Supabase Dashboard → Settings → API → Service Role Key
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# ====================================================================
# CRAWLING CONFIGURATION (OPTIONAL)
# ====================================================================
# OPTIONAL: Maximum concurrent crawling operations (default: 10)
MAX_CONCURRENT=10

# OPTIONAL: Maximum crawling depth for websites (default: 3)
MAX_DEPTH=3

# OPTIONAL: Chunk size for document processing (default: 5000)
CHUNK_SIZE=5000

# OPTIONAL: Memory threshold percentage for adaptive crawling (default: 70.0)
MEMORY_THRESHOLD_PERCENT=70.0

# ====================================================================
# DEVELOPMENT CONFIGURATION (OPTIONAL)
# ====================================================================
# OPTIONAL: Enable debug logging (true|false) (default: false)
DEBUG=false

# OPTIONAL: Enable verbose crawling output (true|false) (default: false)
VERBOSE_CRAWLING=false

# OPTIONAL: Auto-setup database on startup (true|false) (default: false)
AUTO_SETUP_DB=false

# ====================================================================
# SETUP VERIFICATION
# ====================================================================
# DO NOT MODIFY: Used by setup scripts to verify configuration
SETUP_COMPLETED=false 